{
  "name": "xmm-js",
  "description": "A Javascript port of the XMM Library",
  "version": "0.0.1",
  "author": "Jules Fran√ßoise <me@julesfrancoise.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/xmm.js",
  "scripts": {
    "dev": "cross-env BABEL_ENV=build NODE_ENV=development webpack --watch",
    "build": "cross-env BABEL_ENV=build NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint src test",
    "test": "eslint src test benchmark && BABEL_ENV=test ava",
    "test:coverage": "eslint src test && BABEL_ENV=test nyc --all --reporter=html ava --verbose",
    "doc": "esdoc",
    "benchmark": "ls benchmark/*/index.js | BABEL_ENV=test xargs -n1 babel-node"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "benchmark": "^2.1.4",
    "cross-env": "^5.1.3",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "**/*.{js}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": false,
    "failWithoutAssertions": false,
    "powerAssert": false,
    "modules": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
